import { render, screen } from '@testing-library/react';
import { {{pascalCaseName}}Renderer } from './{{pascalCaseName}}.renderer';

describe('{{pascalCaseName}}Renderer', () => {
  it('should show loading state', () => {
    render(<{{pascalCaseName}}Renderer data="" isLoading={true} />);

    expect(screen.getByText('Loading...')).toBeInTheDocument();
  });

  it('should render data when loaded', () => {
    render(<{{pascalCaseName}}Renderer data="Test Data" isLoading={false} />);

    expect(screen.getByText('Test Data')).toBeInTheDocument();
  });
});
